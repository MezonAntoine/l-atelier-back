{
  "name": "atelier-v2",
  "author": "Antoine Mezon",
  "version": "1.0.0",
  "license": "ISC",
  "engines": {
    "node": ">=18"
  },
  "type": "commonjs",
  "lint-staged": {
    "*": [
      "git add"
    ],
    "src/**/*.{js,ts}": [
      "yarn tslint.fix",
      "yarn prettier.fix",
      "git add"
    ]
  },
  "scripts": {
    "project:debug": "docker-compose -f docker-compose.local.yml up --build",
    "api:debug": "nodemon src/services/api/api.ts",
    "docker:clean": "docker rm -f $(docker ps -a -q); docker system prune",
    "prebuild": "rm -rf ./dist",
    "build": "tsc",
    "find-deadcode": "ts-prune | grep -v '(used in module)'"
  },
  "dependencies": {
    "axios": "^1.3.6",
    "celebrate": "^15.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-http-context": "^1.2.4",
    "figlet": "^1.6.0",
    "fs-readdir-recursive": "^1.1.0",
    "module-alias": "^2.2.2",
    "mongoose": "^8.1.1",
    "multer": "^1.4.5-lts.1",
    "require-dir": "^1.2.0",
    "ts-node": "^10.9.1",
    "validate.js": "^0.13.1",
    "winston": "^3.8.2",
    "winston-console-format": "^1.0.8",
    "winston-papertrail": "^1.0.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/figlet": "^1.5.5",
    "@types/fs-readdir-recursive": "^1.1.0",
    "@types/module-alias": "^2.0.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.16.1",
    "@types/require-dir": "^1.0.2",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "ts-prune": "^0.10.3",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-no-focused-test": "^0.5.0",
    "typescript": "^5.0.4"
  },
  "_moduleAliases": {
    "common": "dist/src/common",
    "config": "dist/config"
  }
}
